<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:background="@color/green_base"
                android:orientation="horizontal"
                tools:layout_weight="15"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/executed_percent_bar.title_pt1"
                    android:text="@string/executed_percent_bar.title_pt1"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    tools:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/executed_percent_bar.title_pt2"
                    android:text="@string/executed_percent_bar.title_pt2"
                    android:textSize="18dp"
                    android:textColor="@color/green_base"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/executed_percent_bar_percent_number_value_pt1_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="6"
                    android:text="6"
                    android:textSize="18sp"
                    android:textColor="@color/green_base"/>

                <TextView
                    android:id="@+id/executed_percent_bar_percent_number_value_pt2_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="%"
                    android:text="%"
                    android:textSize="18sp"
                    android:textColor="@color/green_base" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>