<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        
        <variable
            name="expandableText"
            type="String"/>

        <variable
            name="title"
            type="String"/>

        <variable
            name="subtitle"
            type="String"/>

        <variable
            name="value"
            type="float" />

        <variable
            name="severityLevelValue"
            type="br.com.stant.libraries.uilibrary.components.severitylevelindicatorview.SeverityLevelEnum" />
        
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/bg_gray"
        android:padding="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABRINDO"/>

        <br.com.stant.libraries.uilibrary.components.severitylevelindicatorview.SeverityLevelIndicatorView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            severityLevel="@{severityLevelValue}"
            />

        <br.com.stant.libraries.uilibrary.components.selectdatepickerview.SelectDatePickerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <br.com.stant.libraries.uilibrary.components.selecttimepickerview.SelectTimePickerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"/>


    </LinearLayout>

</layout>