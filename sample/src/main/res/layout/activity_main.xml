<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <br.com.stant.libraries.uilibrary.components.executedpercentbarview.ExecutedPercentBarView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />

    <br.com.stant.libraries.uilibrary.components.infoactioncardview.InfoActionCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:infoText="titulo"
        app:actionName="action name"
        />

    <br.com.stant.libraries.uilibrary.components.actionbuttonview.ActionButtonView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:actionIcon="@drawable/ic_ok_circle"
        app:cardStyle="horizontal"
        app:actionText="@string/app_name"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <br.com.stant.libraries.uilibrary.components.actionbuttonview.ActionButtonView
            android:id="@+id/service_inspection_form_filled_detail_approve_siff_action_button_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            app:actionText="@string/action_button_view.text_button_example"
            app:actionIcon="@drawable/ic_ok_circle"
            app:cardStyle="vertical"
            />

        <br.com.stant.libraries.uilibrary.components.simpleinformationscardview.SimpleInformationsCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:firstTitle="first title"
            app:firstValue="first value"
            app:secondTitle="second title"
            app:secondValue="second value"
            app:informationsColor="@color/gray"
            android:layout_marginStart="10dp"
            />

    </LinearLayout>

</LinearLayout>
